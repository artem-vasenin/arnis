section.flip-cards.grey.lighten-3.pt-5.pb-5
  .container
    .row
      .col-12
        .wrapper
          .pb-3.text-center
            h2.text-uppercase Наши преимущества
          .clearfix
            .cols
              each item in itemData
                .flip-col.col-sm-6.col-lg-4.mb-4(ontouchstart="this.classList.toggle('hover');")
                  .flip-container
                    .front.rounded.z-depth-2(style=`background-image: url(${item.image})`)
                      .inner
                        .flip-cards__title= item.title
                        .flip-cards__desc= item.subtitle
                    .back.rounded.z-depth-2
                      .inner
                        p= item.text
